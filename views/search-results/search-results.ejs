<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <link href="/css/output.css" rel="stylesheet">
</head>
<body class="bg-white text-gray-900">

    <%- include('../partials/navbar') %>

    <div class="container mx-auto py-10">
        <!-- Blog Post Container with smooth shadows and transitions -->
        <div class="blogContainer mb-6 rounded-xl shadow-2xl p-10 bg-gradient-to-r from-white to-gray-100">
            <!-- Enhanced Heading with dynamic gradient and glowing text -->
            <h1 class="text-6xl font-extrabold text-center mb-5 pb-5 bg-clip-text text-transparent bg-gradient-to-r from-purple-500 via-indigo-500 to-blue-400 animate-gradient-slow drop-shadow-lg hover:text-purple-600 transition-colors duration-500">
                Search Results for "<%= query ? query : '' %>"
            </h1>

            <% if (!query || query.trim() === '' || query.trim()=== '.') { %>
                <p class="text-red-500 font-bold mb-4">Please enter a search term.</p>
            <% } else if (post.length > 0) { %>
                <!-- Blog Grid with animated hover effects -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    <% post.forEach(post => { %>
                        <!-- Blog Card with dynamic transitions -->
                        <a href="/blog/<%= post._id %>" class="group block relative transition-transform duration-500 hover:scale-105">
                            <div class="post p-6 bg-white border border-gray-200 rounded-lg shadow-lg hover:shadow-2xl transition-shadow duration-300 hover:bg-gradient-to-r from-indigo-50 to-blue-50">
                                <!-- Blog Title with subtle hover glow and smooth transitions -->
                                <div class="flex justify-between items-center mb-4">
                                    <h2 class="text-2xl font-bold text-gray-900 group-hover:text-indigo-500 transition-colors duration-300 group-hover:underline hover:tracking-wide">
                                        <%= post.title %>
                                    </h2>
                                    <p class="text-sm text-gray-600 flex items-center gap-2 group-hover:text-purple-600 transition-colors duration-300">
                                        <svg class="w-5 h-5 text-gray-400 group-hover:text-purple-600 transition-colors" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                            <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.1 0 2 .9 2 2s-.9 2-2-2-.9-2 2-2zm0 14c-2.33 0-4.31-1.46-5.12-3.5.03-.02.1-.03.16-.03H8.5c.22 0 .43.1.56.27.5.65 1.24 1.23 2.19 1.23.94 0 1.7-.58 2.19-1.23.13-.17.34-.27.56-.27h1.46c.06 0 .12.01.16.03C16.31 17.54 14.33 19 12 19zm4.82-5H16.5c-.22 0-.43-.1-.56-.27-.5-.65-1.24-1.23-2.19-1.23-.94 0-1.7.58-2.19 1.23-.13.17-.34.27-.56.27H8.72c-.06 0-.13-.01-.16-.03C7.69 13.46 9.67 12 12 12s4.31 1.46 5.12 3.5c-.03.02-.1.03-.16.03z"/>
                                        </svg>
                                        <%= post.author.username %>
                                    </p>
                                </div>

                                <!-- Post Excerpt with smooth hover effects -->
                                <p class="text-gray-700 mb-6 group-hover:text-gray-900 transition-colors duration-300 group-hover:scale-105">
                                    <%= post.content.substring(0, 100) %>...
                                </p>

                                <!-- Media Display with dynamic scale on hover -->
                                <% if (post.media) { %>
                                    <% if (post.media.endsWith('.png') || post.media.endsWith('.jpg') || post.media.endsWith('.jpeg') || post.media.endsWith('.gif')) { %>
                                        <img src="/uploads/<%= post.media %>" alt="Post Image" class="w-full h-48 object-cover rounded-lg shadow-md transition-transform duration-500 hover:scale-105">
                                    <% } else if (post.media.endsWith('.mp4') || post.media.endsWith('.avi')) { %>
                                        <video class="w-full h-48 object-cover rounded-lg shadow-md transition-transform duration-500 hover:scale-105" controls preload="metadata">
                                            <source src="/uploads/<%= post.media %>" type="video/mp4">
                                        </video>
                                    <% } else { %>
                                        <p class="text-red-500 mb-2">Unsupported media format</p>
                                    <% } %>
                                <% } %>
                            </div>
                        </a>
                    <% }) %>
                </div>
            <% } else { %>
                <!-- Message for no posts with soft animations -->
                <div class="mt-4 flex justify-center items-center">
                    <p class="text-xl text-gray-600 bg-white p-4 rounded-lg shadow-md animate-pulse">
                        No results found for your search query.
                    </p>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>
